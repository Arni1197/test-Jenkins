{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "packages": {
    "auth-service": {
      "release-type": "node",
      "package-name": "auth-service",
      "pull-request-title-pattern": "chore(auth-service): release${component} ${version}",
      "changelog-path": "auth-service/CHANGELOG.md"
    },
    "user-service": {
      "release-type": "node",
      "package-name": "user-service",
      "pull-request-title-pattern": "chore(user-service): release${component} ${version}",
      "changelog-path": "user-service/CHANGELOG.md"
    },
    "catalog-service": {
      "release-type": "node",
      "package-name": "catalog-service",
      "pull-request-title-pattern": "chore(catalog-service): release${component} ${version}",
      "changelog-path": "catalog-service/CHANGELOG.md"
    },
    "api-gateway": {
      "release-type": "node",
      "package-name": "api-gateway",
      "pull-request-title-pattern": "chore(api-gateway): release${component} ${version}",
      "changelog-path": "api-gateway/CHANGELOG.md"
    },
    "frontend": {
      "release-type": "node",
      "package-name": "frontend",
      "pull-request-title-pattern": "chore(frontend): release${component} ${version}",
      "changelog-path": "frontend/CHANGELOG.md"
    }
  }
}