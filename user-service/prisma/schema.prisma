generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id          Int      @id @default(autoincrement())
  userId      String   @unique          // UUID из public.User.id
  displayName String?
  avatarUrl   String?
  country     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}