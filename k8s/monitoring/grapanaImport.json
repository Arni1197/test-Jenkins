{
  "id": null,
  "uid": "nest-backend-dashboard",
  "title": "NestJS Backend Overview",
  "tags": [ "backend", "nestjs", "nodejs" ],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests Per Second (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"nest-backend\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Error Rate (5xx)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"nest-backend\", status=~\"5..\"}[2m]))",
          "legendFormat": "errors"
        }
      ]
    },
    {
      "type": "stat",
      "title": "p99 Latency",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"nest-backend\"}[5m])) by (le))",
          "legendFormat": "p99 latency"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Event Loop Lag (ms)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_max_seconds{job=\"nest-backend\"} * 1000",
          "legendFormat": "eventloop lag"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Handles",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_active_handles{job=\"nest-backend\"}",
          "legendFormat": "active handles"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (per pod)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"backend.*\"}[2m])",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (per pod)",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"backend.*\"}",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pod Restarts",
      "gridPos": { "x": 0, "y": 16, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(kube_pod_container_status_restarts_total{pod=~\"backend.*\"})",
          "legendFormat": "restarts"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Connections",
      "gridPos": { "x": 8, "y": 16, "w": 16, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_active_requests_total{job=\"nest-backend\"}",
          "legendFormat": "active requests"
        }
      ]
    }
  ]
}