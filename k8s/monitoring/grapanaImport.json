{
  "id": null,
  "uid": "nestjs-backend",
  "title": "NestJS Backend Metrics",
  "tags": ["nestjs", "backend", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "RPS (Requests Per Second)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Error Rate (5xx)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[2m]))",
          "legendFormat": "errors"
        }
      ]
    },
    {
      "type": "stat",
      "title": "p99 Latency (ms)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Event Loop Lag (ms)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_max_seconds * 1000",
          "legendFormat": "lag ms"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Handles",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_active_handles",
          "legendFormat": "handles"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Requests",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_active_requests_total",
          "legendFormat": "active requests"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Process CPU (%)",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[30s]) * 100",
          "legendFormat": "cpu %"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Process Memory (RSS)",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 6 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "rss"
        }
      ]
    }
  ]
}