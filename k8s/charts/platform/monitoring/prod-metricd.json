{
    "id": null,
    "title": "NestJS HTTP Observability (prom-client)",
    "tags": ["nestjs", "http", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "stat",
        "title": "RPS",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "orientation": "horizontal"
        }
      },
      {
        "type": "stat",
        "title": "Error rate (4xx + 5xx)",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "unit": "percentunit"
        }
      },
      {
        "type": "stat",
        "title": "5xx errors / sec",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] }
        }
      },
      {
        "type": "timeseries",
        "title": "Latency p95 (seconds)",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Latency p99 (seconds)",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Top routes by p95 latency",
        "gridPos": { "x": 0, "y": 10, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket[5m]))))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Requests by status code",
        "gridPos": { "x": 0, "y": 18, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[1m]))",
            "refId": "A"
          }
        ]
      }
    ]
  }